{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MSVC-CMake",
            "type": "cppvsdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "data/k-on.mp4",
                // "data/lalal.aac"
                // "data/data.h264",
                // "data/data.aac",
                // "data/k-on!.mov",
                // "60",
                // "120"
                // "libx264"
                // "data/gray_pics/gray",
                // "data/color_pics/color",
                // --------------- test ---------------
                // "data/tests/meme.bin",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                }
            ]
        }
    ]
}